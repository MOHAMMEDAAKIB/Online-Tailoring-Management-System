# Copy this file to .env and fill in your actual values

NODE_ENV=development
PORT=4000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# For local development (MySQL)
DB_TYPE=mysql
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=tailoring_management

# For production with Aiven.io (PostgreSQL)
# Uncomment and use these instead:
# DB_TYPE=postgres
# DB_HOST=your-aiven-host.aivencloud.com
# DB_PORT=12345
# DB_USER=avnadmin
# DB_PASSWORD=your-aiven-password
# DB_NAME=defaultdb
# DB_SSL=true
DB_CONNECTION_LIMIT=10

JWT_SECRET=generate_random_secret_here
JWT_REFRESH_SECRET=generate_random_secret_here
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

FRONTEND_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@tailoringshop.com

STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

MAX_FILE_SIZE=5
